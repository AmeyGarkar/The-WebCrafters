 <header
        class="flex justify-between items-center p-4 bg-white/10 backdrop-blur-md border-b border-white/20 rounded-b-lg">
  <div class="container mx-auto flex items-center justify-between">

    <!-- Left: Logo and Greeting -->
    <div class="flex items-center gap-4">
      <a href="/" class="text-3xl font-bold">WEARIFY</a>
      <% if (user) { %>
        <span class="text-base font-semibold">Hello, <%= user.name %></span>
      <% } %>
    </div>

    <!-- Middle: Product Categories -->
    <nav class="flex flex-wrap justify-center gap-3 font-semibold">
      <a href="#"  class="hover:text-yellow-300">Smartwatches</a>
      <a href="#" class="hover:text-yellow-300">Earbuds</a>
      <a href="#"  class="hover:text-yellow-300">Speakers</a>
      <a href="#"  class="hover:text-yellow-300">Accessories</a>
      <a href="#" class="hover:text-yellow-300">Gift Store</a>
    </nav>

    <!-- Right: Navigation + Profile Dropdown -->
    <nav class="flex items-center gap-6 font-medium relative">

      <% if (user) { %>
        <a href="/" class="hover:underline">Home</a>
        <a href="/cart" class="hover:underline">Cart</a>

        <!-- Profile Dropdown -->
        <div class="relative group">
          <button class="hover:underline focus:outline-none">Profile â–¾</button>

          <div class="absolute right-0 mt-2 hidden group-hover:flex flex-col bg-white text-black shadow-md rounded-md min-w-[150px] z-50">
            <a href="/profile" class="px-4 py-2 hover:bg-gray-100">My Profile</a>
            <a href="/orders" class="px-4 py-2 hover:bg-gray-100">Orders</a>
            <a href="/settings" class="px-4 py-2 hover:bg-gray-100">Settings</a>
            <a href="/logout" class="px-4 py-2 hover:bg-gray-100 border-t border-gray-200">Logout</a>
          </div>
        </div>
      <% } else { %>
        <a href="/login" class="hover:underline">Login</a>
        <a href="/signup" class="hover:underline">Signup</a>
      <% } %>

    </nav>
  </div>
</header>
