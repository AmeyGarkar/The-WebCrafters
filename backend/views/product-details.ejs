<section class="px-6 py-10">
  <div class="grid md:grid-cols-2 gap-8">
    <img src="/<%= product.image %>" class="w-full rounded shadow" />
    <div>
      <h2 class="text-2xl font-bold"><%= product.name %></h2>
      <div class="text-xl text-gray-700 mt-2">
        ₹<%= product.price %> <span class="line-through text-gray-400 ml-2">₹<%= product.originalPrice %></span>
      </div>
      <p class="mt-4 text-gray-600"><%= product.description %></p>
      <ul class="list-disc ml-6 mt-4 text-gray-500">
        <% product.features.forEach(f => { %>
          <li><%= f %></li>
        <% }) %>
      </ul>
      <form action="/cart/add/<%= product._id %>" method="POST" class="mt-6">
        <button type="submit" class="px-6 py-2 bg-black text-white rounded hover:bg-gray-800">
          Add to Cart
        </button>
      </form>
    </div>
  </div>
</section>
